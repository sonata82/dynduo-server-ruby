<h1>Skills</h1>

<%= link_to 'New skill', new_skill_path %>

<table>
  <tr>
    <th>Name</th>
    <th>IconUrl</th>
    <th>useInWordcloud</th>
  </tr>
  
  <% @skills.each do |skill| %>
    <tr>
      <td><%= skill.name %></td>
      <td><%= skill.iconUrl; %></td>
      <td><%= skill.useInWordcloud %></td>
      <td><%= link_to 'Show', skill_path(skill) %></td>
      <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
      <td><%= link_to 'Destroy', skill_path(skill), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', controller: 'welcome' %>